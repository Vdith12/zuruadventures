<script>
    document.getElementById("booking-form").style.display = "none"; // Ensure form is initially hidden

    function toggleBookingForm() {
        const bookingForm = document.getElementById("booking-form");
        bookingForm.style.display = bookingForm.style.display === "none" ? "flex" : "none";
    }

    function showConfirmation() {
        document.getElementById("confirmation-message").style.display = "block";
        document.getElementById("booking-form").style.display = "none"; // Hide the form after submission
        return true;
    }
</script>

