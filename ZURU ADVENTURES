    <div id="imageModal" class="modal">
        <span class="close-button" onclick="closeModal()">&times;</span>
        <div class="modal-content">
                <img id="modalImage">
                <div id="modalDetails" class="modal-details">
                        <h3 id="modalTitle"></h3>
                        <p id="modalDescription"></p>
                        <p id="modalPrice"></p>
                </div>
        </div>
    </div>

    <script>
        const toursContainer = document.querySelector('.tours-container');
        const tourCards = document.querySelectorAll('.tour-card');
        let currentIndex = 0;
        let intervalId;
        const scrollDelay = 3000; // Time in milliseconds between slides
        const modal = document.getElementById("imageModal");
        const modalImage = document.getElementById("modalImage");
        const modalTitle = document.getElementById("modalTitle");
        const modalDescription = document.getElementById("modalDescription");
        const modalPrice = document.getElementById("modalPrice");

        function scrollToCard(index) {
                toursContainer.scrollLeft = tourCards[index].offsetLeft;
        }

        function nextSlide() {
                currentIndex = (currentIndex + 1) % tourCards.length;
                scrollToCard(currentIndex);
        }

        function prevSlide() {
                currentIndex = (currentIndex - 1 + tourCards.length) % tourCards.length;
                scrollToCard(currentIndex);
        }

        function startAutoSlide() {
                intervalId = setInterval(nextSlide, scrollDelay);
        }

        function stopAutoSlide() {
                clearInterval(intervalId);
        }

        // Start auto slide on load
        startAutoSlide();

        // Pause auto slide on hover
        toursContainer.addEventListener('mouseenter', stopAutoSlide);
        toursContainer.addEventListener('mouseleave', startAutoSlide);

        function showDetails(card) {
                const infoParagraph = card.querySelector('.tour-info p');
                const readMoreButton = card.querySelector('.read-more-btn');

                if (infoParagraph.classList.contains('visible')) {
                        infoParagraph.classList.remove('visible');
                        readMoreButton.textContent = 'Read More';
                } else {
                        document.querySelectorAll('.tour-info p.visible').forEach(p => {
                                p.classList.remove('visible');
                                p.parentNode.querySelector('.read-more-btn').textContent = 'Read More';
                        });
                        infoParagraph.classList.add('visible');
                        readMoreButton.textContent = 'Read Less';
                }
        }

        function slide(direction) {
                stopAutoSlide(); // Stop auto-sliding when manual navigation occurs
                currentIndex = (currentIndex + direction + tourCards.length) % tourCards.length;
                scrollToCard(currentIndex);
                setTimeout(startAutoSlide, scrollDelay + 10000); // Resume auto-sliding after a delay
        }

        function openModal(imageSrc, title, description, price) {
                modal.style.display = "block";
                modalImage.src = imageSrc;
                modalTitle.textContent = title;
                modalDescription.textContent = description;
                modalPrice.textContent = price;
        }

        function closeModal() {
                modal.style.display = "none";
        }

        // Close modal if the user clicks outside of it
        window.onclick = function(event) {
                if (event.target == modal) {
                        closeModal();
                }
        }
    </script>

